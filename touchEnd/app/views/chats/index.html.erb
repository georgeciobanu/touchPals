<h1>Listing chats</h1>

<table>
  <tr>
    <th>Sender</th>
    <th>Receiver</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @chats.each do |chat| %>
  <tr>
    <td><%= chat.sender_id %></td>
    <td><%= chat.receiver_id %></td>
    <td><%= chat.text %></td>
    <td><%= link_to 'Show', chat %></td>
    <td><%= link_to 'Edit', edit_chat_path(chat) %></td>
    <td><%= link_to 'Destroy', chat, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

